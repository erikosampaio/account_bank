<div class="animate form login_form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |form| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="col-md-2">
      <h1 style="font-family: Calibri">Cadastro</h1>
      <div class="form-group">
        <%= form.email_field :email, autofocus: true, placeholder:"Email", class:"form-control" %>
      </div>
        <%= form.fields_for :account do |f| %>
          <div class="form-group">
            <%= f.text_field :name, placeholder:"Nome", class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.number_field :number, placeholder:"NÃºmero da conta", class:"form-control" %>
          </div>
        <% end %>
      <div class="form-group">
        <%= form.password_field :password, placeholder:"Senha", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= form.password_field :password_confirmation, placeholder:"ConfirmaÃ§Ã£o da Senha", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= form.submit "Entrar", class:"btn btn-primary submit" %>
        <%= link_to "Cancelar", root_path, class:"btn btn-danger" %>
      </div>
    </div>
  <% end %>
</div>
