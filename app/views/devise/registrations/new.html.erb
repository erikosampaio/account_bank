<div class="animate form login_form">
  <% flash.each do |key, value| %>
    <div class="flash <%= key %>"><%= value %></div>
  <% end %>
  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |form| %>
    <div class="col-md-3">
      <h1 style="font-family: Calibri">Novo Login</h1>
      <div class="form-group">
        <%= form.label :email %>
        <%= form.email_field :email, autofocus: true, placeholder:"Email", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :Nome %>
        <%= form.text_field :username, placeholder:"Nome", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :Numero_da_conta %>
        <%= form.number_field :number_account, value: $generate_number_account ||= 1001, class:"form-control", disabled:"true" %>
      </div>
      <div class="form-group">
        <%= form.label :Senha %>
        <%= form.password_field :password, placeholder:"Senha", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= form.label :Confirmação_da_senha %>
        <%= form.password_field :password_confirmation, placeholder:"Confirmação da Senha", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= form.submit "Cadastrar", class:"btn btn-primary submit" %>
        <%= link_to "Cancelar", root_path, class:"btn btn-danger" %>
      </div>
    </div>
  <% end %>
</div>
