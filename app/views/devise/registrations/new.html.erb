<div class="animate form login_form">
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>
    <div class="col-md-2">
      <h1 style="font-family: Calibri">Cadastro</h1>
      <div class="form-group">
        <%= f.email_field :email, autofocus: true, placeholder:"Email", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password, placeholder:"Senha", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.password_field :password_confirmation, placeholder:"ConfirmaÃ§Ã£o da Senha", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= f.submit "Entrar", class:"btn btn-primary submit" %>
        <%= link_to "Cancelar", root_path, class:"btn btn-danger" %>
      </div>
    </div>
  <% end %>
</div>
