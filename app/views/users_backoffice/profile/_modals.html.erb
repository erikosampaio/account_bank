<!-- Modal -->
<div class="modal fade" id="balanceModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <form>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Seu Saldo:</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <%= label_tag 'R$' %>
            <%= text_field_tag nil, @user.balance.round(2), class:"form-control", disabled:"true" %>
          </div>
        </div>
      </form>
    </div>
  </div>
</div>
<!-- /Modal -->

<!-- Modal -->
<div class="modal fade" id="depositModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <%= form_with(url: users_backoffice_profile_deposit_logged_path, model: @user, local: true) do |form| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Dep√≥sito</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <%= form.label :valor %>
            <%= form.number_field :value, placeholder:"Valor", class:"form-control", min:"1", max:"2000" %>
          </div>
        </div>
        <div class="modal-footer">
          <%= form.submit 'Depositar', class:"btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- /Modal -->

<!-- Modal -->
<div class="modal fade" id="withdrawModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <%= form_with(url: users_backoffice_profile_withdraw_path, model: @user) do |form| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Saque</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <%= form.label :valor %>
            <%= form.number_field :amount, placeholder:"Valor", class:"form-control", min:"1" %>
          </div>
        </div>
        <div class="modal-footer">
          <%= form.submit 'Sacar', class:"btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- /Modal -->

<!-- Modal -->
<div class="modal fade" id="closingAccountModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
  <div class="modal-dialog modal-sm" role="document">
    <div class="modal-content">
      <%= form_with(url: users_backoffice_profile_closing_account_path, model: @user) do |form| %>
        <div class="modal-header">
          <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
          <h4 class="modal-title" id="myModalLabel">Encerrar Conta</h4>
        </div>
        <div class="modal-body">
          <div class="form-group">
            <%= form.password_field :situation, placeholder:"Confirma o encerramento?", class:"form-control", readonly:true %>
          </div>
          <div class="modal-footer">
            <%= form.submit 'Confirmar', class:"btn btn-primary" %>
            <%= link_to 'Cancelar', users_backoffice_profile_index_path, class:"btn btn-danger" %>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
<!-- /Modal -->