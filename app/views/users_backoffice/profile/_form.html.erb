<div class="animate form login_form">
  <%= form_for(url: users_backoffice_editar_path, model: @user, local: true) do |form| %>
    <div class="col-md-2">
      <h1 style="font-family: Calibri">Nova Conta</h1>
      <div class="form-group">
        <%= form.email_field :email, autofocus: true, placeholder:"Email", class:"form-control" %>
      </div>
        <%= form.fields_for :account do |f| %>
          <div class="form-group">
            <%= f.text_field :name, placeholder:"Nome", class:"form-control" %>
          </div>
          <div class="form-group">
            <%= f.number_field :number, placeholder:"Número da conta", class:"form-control" %>
          </div>
        <% end %>
      <div class="form-group">
        <%= form.password_field :password, placeholder:"Senha", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= form.password_field :password_confirmation, placeholder:"Confirmação da Senha", class:"form-control" %>
      </div>
      <div class="form-group">
        <%= form.submit "Entrar", class:"btn btn-primary submit" %>
        <%= link_to "Cancelar", root_path, class:"btn btn-danger" %>
      </div>
    </div>
  <% end %>
</div>